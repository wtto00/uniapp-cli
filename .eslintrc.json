{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["dist"],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off",
    "linebreak-style": "error",
    "max-len": ["error", 120]
  }
}
