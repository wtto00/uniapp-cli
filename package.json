{
  "name": "uniapp_cli",
  "version": "0.0.1-alpha.1",
  "description": "CLI for uniapp.",
  "type": "module",
  "bin": {
    "uniapp": "./bin/uniapp.mjs"
  },
  "files": ["bin", "sdk", "dist"],
  "scripts": {
    "dev": "tsc -p tsconfig.json --pretty --declaration --sourceMap --watch",
    "uniapp": "tsx src/index.ts",
    "build": "pnpm build:js && pnpm build:type",
    "build:js": "tsc -p tsconfig.json --pretty --removeComments --sourceMap",
    "build:type": "tsc -p tsconfig.json --pretty --declaration --emitDeclarationOnly",
    "prebuild": "node scripts/prebuild.mjs",
    "test": "globstar -- node --import tsx --test tests/**/*.test.ts",
    "preinstall": "npx -y only-allow pnpm",
    "check": "biome check --write src",
    "format": "biome format --write src",
    "lint": "biome lint --write src",
    "prepare": "husky && echo npx lint-staged > .husky/pre-commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wtto00/uniapp-cli.git",
    "directory": "packages/cli"
  },
  "keywords": ["uniapp", "cli"],
  "author": "wtto00 <wtto00@outlook.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/wtto00/uniapp-cli/issues"
  },
  "homepage": "https://github.com/wtto00/uniapp-cli#readme",
  "dependencies": {
    "@wtto00/android-tools": "^1.0.5",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.4.1",
    "inquirer": "^12.0.0",
    "json5": "^2.2.3",
    "open": "^10.1.0",
    "ora": "^8.1.0",
    "package-manager-detector": "^0.2.2",
    "pkg-types": "^1.2.1",
    "validate-npm-package-name": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.7.7",
    "@types/validate-npm-package-name": "^4.0.2",
    "@wtto00/biome-config": "^0.0.1",
    "globstar": "^1.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.2",
  "lint-staged": {
    "*": ["biome check", "biome format", "biome lint"]
  }
}
